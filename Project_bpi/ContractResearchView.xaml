<UserControl x:Class="Project_bpi.ContractResearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Стили для таблицы -->
        <Style x:Key="TableHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="TableCellStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="2"/>
        </Style>

        <!-- Стиль для Action-кнопок (Создать, Редактировать, Удалить, Загрузить таблицу) -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0167a4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#015a8f"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#014d78"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопки Сохранить -->
        <Style x:Key="SaveButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#00bf63"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00a854"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#009147"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Стиль для иконки сортировки в заголовках -->
        <Style x:Key="SortButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="3"
                        Width="{TemplateBinding Width}"
                        Height="{TemplateBinding Height}">
                            <Image Source="/Снимок экрана 2025-11-17 121115.png" 
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- При наведении -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#20000000"/>
                                <!-- Можно использовать цвет бренда, например: #200167a4 -->
                            </Trigger>

                            <!-- При нажатии -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#40000000"/>
                                <!-- Или: #400167a4 -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="20">
                <!-- Заголовок раздела -->
                <Border CornerRadius="35" 
                        Margin="10" 
                        Padding="15">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#5394ba" Offset="0"/>
                            <GradientStop Color="#0167a4" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="1. Договорная деятельность" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   TextAlignment="Center"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="1.2 Хоздоговорные научно-исследовательские работы кафедры (НИЦ, НИЛ, НИГ)" 
                                   FontSize="12" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,5"/>
                    </StackPanel>
                </Border>

                <!-- Кнопка Загрузить таблицу -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                    <Button Content="Загрузка таблицы" Style="{StaticResource ActionButtonStyle}"/>
                </StackPanel>

                <!-- Контейнер для таблицы и кнопки фильтра -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Основная таблица -->
                    <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" Background="White">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Шапка таблицы -->
                            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="0,0,0,1" Background="White">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" MaxWidth="50"/>
                                        <ColumnDefinition Width="2.5*" MaxWidth="300"/>
                                        <ColumnDefinition Width="*" MaxWidth="100"/>
                                        <ColumnDefinition Width="1.5*" MaxWidth="150"/>
                                        <ColumnDefinition Width="*" MaxWidth="80"/>
                                        <ColumnDefinition Width="*" MaxWidth="80"/>
                                        <ColumnDefinition Width="2*" MaxWidth="250"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- № договора -->
                                    <Border Grid.Column="0" BorderBrush="Black" BorderThickness="0,0,1,0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="№ договора" Style="{StaticResource TableHeaderStyle}" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <Button x:Name="SortCol0" Style="{StaticResource SortButtonStyle}" 
                        Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Visibility="Collapsed" Margin="0,0,4,2"/>
                                        </Grid>
                                    </Border>

                                    <!-- Наименование и ФИО -->
                                    <Border Grid.Column="1" BorderBrush="Black" BorderThickness="0,0,1,0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="Наименование (основание к ее выполнению: распоряжение ОАО «РЖД», научно-техническая программа и т.п.) и Ф.И.О. руководителя" 
                           Style="{StaticResource TableHeaderStyle}" TextWrapping="Wrap"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <Button x:Name="SortCol1" Style="{StaticResource SortButtonStyle}" 
                        Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Visibility="Collapsed" Margin="0,0,4,2"/>
                                        </Grid>
                                    </Border>

                                    <!-- Стоимость -->
                                    <Border Grid.Column="2" BorderBrush="Black" BorderThickness="0,0,1,0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="Стоимость НИР в 2о… г." Style="{StaticResource TableHeaderStyle}" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <Button x:Name="SortCol2" Style="{StaticResource SortButtonStyle}" 
                        Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Visibility="Collapsed" Margin="0,0,4,2"/>
                                        </Grid>
                                    </Border>

                                    <!-- Заказчик -->
                                    <Border Grid.Column="3" BorderBrush="Black" BorderThickness="0,0,1,0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="Заказчик" Style="{StaticResource TableHeaderStyle}" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <Button x:Name="SortCol3" Style="{StaticResource SortButtonStyle}" 
                        Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Visibility="Collapsed" Margin="0,0,4,2"/>
                                        </Grid>
                                    </Border>

                                    <!-- Объединённая ячейка: Фактическое выполнение -->
                                    <Border Grid.Column="4" Grid.ColumnSpan="2" BorderBrush="Black" BorderThickness="0,0,1,0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="Фактическое выполнение НИР, тыс. руб." 
                           Style="{StaticResource TableHeaderStyle}" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <Button x:Name="SortCol4" Style="{StaticResource SortButtonStyle}" 
                        Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Visibility="Collapsed" Margin="0,0,4,2"/>
                                        </Grid>
                                    </Border>

                                    <!-- Краткая характеристика -->
                                    <Border Grid.Column="6">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="Краткая характеристика выполненных разделов темы" 
                           Style="{StaticResource TableHeaderStyle}" TextWrapping="Wrap"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <Button x:Name="SortCol6" Style="{StaticResource SortButtonStyle}" 
                        Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Visibility="Collapsed" Margin="0,0,4,2"/>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- Подзаголовки для Фактическое выполнение -->
                            <Border Grid.Row="1" BorderBrush="Black" BorderThickness="0,0,0,1" Background="White">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" MaxWidth="50"/>
                                        <ColumnDefinition Width="2.5*" MaxWidth="300"/>
                                        <ColumnDefinition Width="*" MaxWidth="100"/>
                                        <ColumnDefinition Width="1.5*" MaxWidth="150"/>
                                        <ColumnDefinition Width="*" MaxWidth="80"/>
                                        <ColumnDefinition Width="*" MaxWidth="80"/>
                                        <ColumnDefinition Width="2*" MaxWidth="250"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" BorderBrush="Black" BorderThickness="0,0,1,0"/>
                                    <Border Grid.Column="1" BorderBrush="Black" BorderThickness="0,0,1,0"/>
                                    <Border Grid.Column="2" BorderBrush="Black" BorderThickness="0,0,1,0"/>
                                    <Border Grid.Column="3" BorderBrush="Black" BorderThickness="0,0,1,0"/>

                                    <Border Grid.Column="4" BorderBrush="Black" BorderThickness="0,0,1,0">
                                        <TextBlock Text="Акты" Style="{StaticResource TableHeaderStyle}"/>
                                    </Border>

                                    <Border Grid.Column="5" BorderBrush="Black" BorderThickness="0,0,1,0">
                                        <TextBlock Text="Оплата" Style="{StaticResource TableHeaderStyle}"/>
                                    </Border>

                                    <Border Grid.Column="6"/>
                                </Grid>
                            </Border>

                            <!-- Тело таблицы с данными -->
                            <Border Grid.Row="2" BorderBrush="Black" BorderThickness="0,0,0,0" Background="White">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" MaxWidth="50"/>
                                        <ColumnDefinition Width="2.5*" MaxWidth="300"/>
                                        <ColumnDefinition Width="*" MaxWidth="100"/>
                                        <ColumnDefinition Width="1.5*" MaxWidth="150"/>
                                        <ColumnDefinition Width="*" MaxWidth="80"/>
                                        <ColumnDefinition Width="*" MaxWidth="80"/>
                                        <ColumnDefinition Width="2*" MaxWidth="250"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" BorderBrush="Black" BorderThickness="0,0,1,0">
                                        <TextBlock Text="1" Style="{StaticResource TableCellStyle}"/>
                                    </Border>

                                    <Border Grid.Column="1" BorderBrush="Black" BorderThickness="0,0,1,0">
                                        <TextBlock Text="2" Style="{StaticResource TableCellStyle}"/>
                                    </Border>

                                    <Border Grid.Column="2" BorderBrush="Black" BorderThickness="0,0,1,0">
                                        <TextBlock Text="3" Style="{StaticResource TableCellStyle}"/>
                                    </Border>

                                    <Border Grid.Column="3" BorderBrush="Black" BorderThickness="0,0,1,0">
                                        <TextBlock Text="4" Style="{StaticResource TableCellStyle}"/>
                                    </Border>

                                    <Border Grid.Column="4" BorderBrush="Black" BorderThickness="0,0,1,0">
                                        <TextBlock Text="5" Style="{StaticResource TableCellStyle}"/>
                                    </Border>

                                    <Border Grid.Column="5" BorderBrush="Black" BorderThickness="0,0,1,0">
                                        <TextBlock Text="6" Style="{StaticResource TableCellStyle}"/>
                                    </Border>

                                    <Border Grid.Column="6">
                                        <TextBlock Text="7" Style="{StaticResource TableCellStyle}"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Кнопка фильтра справа от таблицы -->
                    <Button x:Name="FilterButton"
                            Grid.Column="1" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top"
                            Background="{x:Null}" 
                            BorderBrush="{x:Null}" 
                            Margin="10,0,0,0" 
                            Width="25" 
                            Height="25">
                        <Image Source="/Снимок экрана 2025-11-17 121115.png" Stretch="Fill"/>
                    </Button>
                </Grid>

                <!-- Кнопки управления -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Создать" Style="{StaticResource ActionButtonStyle}"/>
                    <Button Content="Редактировать" Style="{StaticResource ActionButtonStyle}"/>
                    <Button Content="Удалить" Style="{StaticResource ActionButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопка Сохранить в правом нижнем углу -->
        <Button Content="Сохранить" 
                Style="{StaticResource SaveButtonStyle}"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,20,20"/>
    </Grid>
</UserControl>