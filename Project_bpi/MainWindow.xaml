<Window x:Class="Project_bpi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_bpi"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <!-- Стили для текста -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="MenuHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <Style x:Key="SubMenuStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#34495e"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <!-- Стиль для пунктов меню -->
        <Style x:Key="MenuItemStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#ecf0f1"/>
                    <Setter Property="BorderBrush" Value="#bdc3c7"/>
                    <Setter Property="BorderThickness" Value="0,0,0,0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для активного пункта меню -->
        <Style x:Key="ActiveMenuItemStyle" TargetType="Border" BasedOn="{StaticResource MenuItemStyle}">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="BorderBrush" Value="#2980b9"/>
            <Setter Property="BorderThickness" Value="2,0,0,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель навигации -->
        <Border Grid.Column="0" Background="#f8f9fa" BorderBrush="#e9ecef" BorderThickness="0,0,1,0">
            <StackPanel>
                <!-- Заголовок с изображением -->
                <StackPanel Orientation="Horizontal" Margin="15,20,15,10">
                    <!-- Изображение вместо текста -->
                    <Image Source="/images/photo_2025-11-16_16-24-15.jpg" Width="190" Height="95" Margin="0,0,10,0" Stretch="UniformToFill"/>
                </StackPanel>

                <!-- Альтернативный вариант - только изображение -->
                <!--
                <StackPanel Margin="15,20,15,10" HorizontalAlignment="Center">
                    <Image Source="/images/logo.png" Width="40" Height="40"/>
                </StackPanel>
                -->

                <!-- Разделитель -->
                <Rectangle Height="1" Fill="#dee2e6" Margin="10,0,10,10"/>

                <!-- Меню навигации -->
                <StackPanel>
                    <!-- Поиск -->
                    <Border Style="{StaticResource MenuItemStyle}">
                        <TextBlock Text="Поиск" Style="{StaticResource MenuHeaderStyle}"/>
                    </Border>

                    <!-- Отчет по НИР с подменю -->
                    <StackPanel>
                        <Border x:Name="NIRReportHeader" Style="{StaticResource MenuItemStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Отчет по НИР" Style="{StaticResource MenuHeaderStyle}"/>
                                <TextBlock Text="▼" FontSize="10" Margin="5,2,0,0" Foreground="#7f8c8d"/>
                            </StackPanel>
                        </Border>

                        <!-- Подпункты Отчет по НИР -->
                        <StackPanel x:Name="NIRSubMenu" Margin="25,0,0,0" Visibility="Collapsed">
                            <Border Style="{StaticResource MenuItemStyle}">
                                <TextBlock Text="Создание отчета" Style="{StaticResource SubMenuStyle}"/>
                            </Border>
                            <Border Style="{StaticResource MenuItemStyle}">
                                <TextBlock Text="Просмотр отчетов" Style="{StaticResource SubMenuStyle}"/>
                            </Border>
                            <Border Style="{StaticResource MenuItemStyle}">
                                <TextBlock Text="Архив отчетов" Style="{StaticResource SubMenuStyle}"/>
                            </Border>
                            <Border Style="{StaticResource MenuItemStyle}">
                                <TextBlock Text="Статистика" Style="{StaticResource SubMenuStyle}"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <!-- Учебный отчет -->
                    <Border Style="{StaticResource MenuItemStyle}">
                        <TextBlock Text="Учебный отчет" Style="{StaticResource MenuHeaderStyle}"/>
                    </Border>

                    <!-- Архив -->
                    <Border Style="{StaticResource MenuItemStyle}">
                        <TextBlock Text="Архив" Style="{StaticResource MenuHeaderStyle}"/>
                    </Border>

                    <!-- Шаблоны -->
                    <Border Style="{StaticResource MenuItemStyle}">
                        <TextBlock Text="Шаблоны" Style="{StaticResource MenuHeaderStyle}"/>
                    </Border>
                </StackPanel>

                <!-- Разделитель -->
                <Rectangle Height="1" Fill="#dee2e6" Margin="10,20,10,10"/>

                <!-- Справка -->
                <Border Style="{StaticResource MenuItemStyle}">
                    <TextBlock Text="Справка" Style="{StaticResource MenuHeaderStyle}"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- Основная область контента -->
        <Border Grid.Column="1" Background="#ffffff">
            <TextBlock Text="Основная область контента" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center" 
                      Foreground="#6c757d"
                      FontSize="16"/>
        </Border>
    </Grid>
</Window>